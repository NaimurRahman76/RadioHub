@{
    ViewData["Title"] = "Live Radio";
    ViewData["Description"] = "Listen to continuous streaming radio with real-time song requests and seamless playback.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .radio-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .main-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .player-section {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .album-art {
            width: 150px;
            height: 150px;
            background: rgba(255,255,255,0.2);
            border-radius: 15px;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 60px;
        }

        .song-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .song-artist {
            font-size: 18px;
            opacity: 0.9;
            margin-bottom: 20px;
        }

        .control-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .control-btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid rgba(255,255,255,0.3);
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .control-btn:hover {
            background: rgba(255,255,255,0.3);
            transform: scale(1.1);
        }

        .control-btn.play-btn {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.3);
        }

        .queue-section {
            padding: 30px;
        }

        .search-box {
            margin-bottom: 30px;
        }

        .search-input {
            border: 2px solid #e0e0e0;
            border-radius: 50px;
            padding: 15px 25px;
            width: 100%;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .search-input:focus {
            border-color: #ff6b6b;
            outline: none;
            box-shadow: 0 0 0 3px rgba(255,107,107,0.1);
        }

        .search-results {
            max-height: 300px;
            overflow-y: auto;
            margin-bottom: 20px;
        }

        .search-item {
            padding: 15px;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .search-item:hover {
            background: #f8f9fa;
            border-color: #ff6b6b;
            transform: translateX(5px);
        }

        .search-item img {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
        }

        .search-item-info {
            flex: 1;
        }

        .search-item-title {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .search-item-meta {
            font-size: 14px;
            color: #666;
        }

        .queue-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .queue-item {
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .queue-item.playing {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
        }

        .add-btn {
            background: #28a745;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 8px 20px;
            cursor: pointer;
            font-size: 14px;
            transition: background 0.3s ease;
        }

        .add-btn:hover {
            background: #218838;
        }

        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .status-indicator.playing {
            background: #28a745;
            animation: pulse 1s infinite;
        }

        .status-indicator.queued {
            background: #ffc107;
        }

        .loading-spinner {
            display: none;
            text-align: center;
            padding: 20px;
        }

        .loading-spinner.active {
            display: block;
        }

        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
        }
    </style>
</head>
<body>
    <div class="radio-container">
        <div class="main-card">
            <!-- Player Section -->
            <div class="player-section">
                <h1><i class="fas fa-broadcast-tower"></i> RadioHub Live</h1>

                <div class="album-art">
                    <i class="fas fa-music" id="albumIcon"></i>
                </div>

                <div class="song-title" id="songTitle">Welcome to RadioHub</div>
                <div class="song-artist" id="songArtist">Add songs to start streaming</div>

                <div class="control-buttons">
                    <div class="control-btn play-btn" id="playBtn" onclick="togglePlay()">
                        <i class="fas fa-play" id="playIcon"></i>
                    </div>
                    <div class="control-btn" onclick="toggleMute()">
                        <i class="fas fa-volume-up" id="volumeIcon"></i>
                    </div>
                    <div class="control-btn" id="reconnectBtn" onclick="manualReconnect()" title="Reconnect to server">
                        <i class="fas fa-wifi" id="reconnectIcon"></i>
                    </div>
                </div>

                <div class="mt-3">
                    <small id="streamStatus">
                        <span class="status-indicator" id="statusIndicator" style="background: #dc3545;"></span>
                        <span id="statusText">Offline</span>
                    </small>
                </div>
            </div>

            <!-- Queue Section -->
            <div class="queue-section">
                <h2><i class="fas fa-list"></i> Queue Management</h2>

                <!-- Search -->
                <div class="search-box">
                    <div class="input-group">
                        <input type="text" class="form-control search-input" id="searchInput"
                               placeholder="üîç Search for songs on YouTube..." />
                        <button class="btn btn-primary" onclick="searchSongs()">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>

                    <div class="loading-spinner" id="searchLoading">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Searching...</span>
                        </div>
                        <p class="mt-2">Searching YouTube...</p>
                    </div>

                    <div id="searchResults"></div>
                </div>

                <!-- Radio Station Status -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h5><i class="fas fa-play-circle"></i> Now Playing</h5>
                                <h3 id="nowPlayingCount">0</h3>
                                <small class="opacity-75">Current Song</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-warning text-dark">
                            <div class="card-body text-center">
                                <h5><i class="fas fa-user-plus"></i> User Requests</h5>
                                <h3 id="userRequestCount">0</h3>
                                <small class="opacity-75">Priority Queue</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h5><i class="fas fa-music"></i> Default Songs</h5>
                                <h3 id="defaultPlaylistCount">0</h3>
                                <small class="opacity-75">Auto-play Library</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Default Playlist -->
                <h3><i class="fas fa-list"></i> Default Playlist</h3>
                <div class="mb-4">
                    <div class="queue-list" id="defaultPlaylistList" style="max-height: 200px;">
                        <p class="text-muted text-center">Loading default playlist...</p>
                    </div>
                </div>

                <!-- User Requests Queue -->
                <h3><i class="fas fa-star"></i> User Requests (Priority Queue)</h3>
                <div class="mb-4">
                    <div class="queue-list" id="userRequestList" style="max-height: 200px;">
                        <p class="text-muted text-center">No user requests. Songs will play from default playlist.</p>
                    </div>
                </div>

                <!-- Queue History -->
                <h3><i class="fas fa-history"></i> Complete Queue View</h3>
                <div class="queue-list" id="queueList">
                    <p class="text-muted text-center">Loading complete queue status...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toastContainer" class="toast-container"></div>

    <!-- Hidden Audio Element for Icecast Stream -->
    <audio id="audioPlayer" preload="none">
        <source src="http://localhost:8087/live" type="audio/mpeg">
        <source src="http://localhost:8087/live" type="audio/ogg">
        Your browser does not support the audio element.
    </audio>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        let connection = null;
        let isPlaying = false;
        let isMuted = false;
        let queue = [];
        let currentlyPlaying = null;
        let isConnected = false;

        const ICECAST_URL = 'http://localhost:8087/live';

        // Initialize SignalR connection
        function initializeSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl('/radiohub')
                .build();

            connection.on('QueueUpdated', (song) => {
                console.log('Queue updated:', song);
                loadRadioStationStatus();
                showToast(`üéµ "${song.title}" added to queue`, 'success');
            });

            // Enhanced SignalR events for radio station
            connection.on('UserRequestAdded', (data) => {
                console.log('User request added:', data);
                loadRadioStationStatus();
                showToast(`üéØ User request: "${data.title}" (Queue: ${data.queueSize})`, 'info');
            });

            connection.on('UserRequestQueued', (data) => {
                console.log('User request queued:', data);
                loadRadioStationStatus();
                showToast(`‚úÖ "${data.title}" queued at position ${data.queuePosition}`, 'success');
            });

            connection.on('PlaylistUpdated', (data) => {
                console.log('Playlist updated:', data);
                loadRadioStationStatus();

                if (data.HasUserRequests) {
                    showToast(`üéµ Playlist: ${data.UserRequestCount} user requests + ${data.DefaultPlaylistCount} default songs`, 'info');
                } else {
                    showToast(`üéµ Playing from default playlist (${data.DefaultPlaylistCount} songs)`, 'info');
                }
            });

            connection.on('SongStarted', (data) => {
                console.log('Song started:', data);
                updateNowPlaying(data);
                showToast(`üé∂ Now playing: ${data.title}`, 'info');
            });

            connection.on('SongPreparing', (data) => {
                console.log('Song preparing:', data);
                showToast(`üéµ Preparing "${data.title}" for streaming...`, 'info');
            });

            connection.on('SongReady', (data) => {
                console.log('Song ready:', data);
                showToast(`‚úÖ "${data.title}" is ready and will play next`, 'success');
            });

            connection.on('QueueCleared', () => {
                console.log('Queue cleared');
                loadQueueStatus();
                showToast('Queue cleared', 'info');
            });

            connection.on('StreamStarted', () => {
                console.log('Stream started');
                showToast('üéôÔ∏è Radio stream is live!', 'success');
            });

            connection.on('StreamStopped', () => {
                console.log('Stream stopped');
                showToast('üîá Radio stream stopped', 'warning');
            });

            // Handle connection state changes
            connection.onreconnecting(error => {
                console.warn('SignalR connection lost:', error);
                isConnected = false;
                updateStreamStatus('offline');
                updateConnectionButton();
                showToast('üîå Connection lost. Please reconnect manually.', 'warning');
                stopAudio(); // Stop audio playback on connection loss
            });

            connection.onreconnected(connectionId => {
                console.log('SignalR reconnected:', connectionId);
                isConnected = true;
                updateConnectionButton();
                showToast('üîå Reconnected successfully!', 'success');
                loadQueueStatus();
            });

            connection.onclose(error => {
                console.error('SignalR connection closed:', error);
                isConnected = false;
                updateStreamStatus('offline');
                updateConnectionButton();
                showToast('üîå Connection closed. Please reconnect manually.', 'error');
                stopAudio(); // Stop audio playback on connection close
            });

            connection.start().then(() => {
                console.log('SignalR connected successfully');
                isConnected = true;
                updateConnectionButton();

                // Start periodic refresh of station status
                setInterval(loadRadioStationStatus, 30000); // Refresh every 30 seconds
            }).catch(err => {
                console.error('SignalR connection error:', err);
                isConnected = false;
                updateStreamStatus('offline');
                updateConnectionButton();
                showToast('‚ùå Failed to connect. Please refresh the page or try reconnecting.', 'error');
            });
        }

        // Initialize page
        $(document).ready(function() {
            initializeSignalR();
            updateConnectionButton();
            loadRadioStationStatus();

            // Enter key search
            $('#searchInput').keypress(function(e) {
                if (e.which === 13) {
                    searchSongs();
                }
            });
        });

        function togglePlay() {
            const audioPlayer = document.getElementById('audioPlayer');
            const playIcon = document.getElementById('playIcon');
            const playBtn = document.getElementById('playBtn');

            if (isPlaying) {
                audioPlayer.pause();
                playIcon.className = 'fas fa-play';
                playBtn.style.background = 'rgba(255,255,255,0.3)';
                updateStreamStatus('paused');
            } else {
                audioPlayer.play().catch(e => {
                    console.error('Error playing audio:', e);
                    showToast('‚ùå Could not connect to stream. Check if Icecast server is running.', 'error');
                });
                playIcon.className = 'fas fa-pause';
                playBtn.style.background = 'rgba(255,255,255,0.5)';
                updateStreamStatus('playing');
            }
            isPlaying = !isPlaying;
        }

        function toggleMute() {
            const audioPlayer = document.getElementById('audioPlayer');
            const volumeIcon = document.getElementById('volumeIcon');

            if (isMuted) {
                audioPlayer.muted = false;
                volumeIcon.className = 'fas fa-volume-up';
            } else {
                audioPlayer.muted = true;
                volumeIcon.className = 'fas fa-volume-mute';
            }
            isMuted = !isMuted;
        }

        async function searchSongs() {
            const query = $('#searchInput').val().trim();
            if (!query) {
                showToast('Please enter a search term', 'warning');
                return;
            }

            $('#searchLoading').addClass('active');
            $('#searchResults').html('');

            try {
                const response = await fetch('/Song/Search', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `query=${encodeURIComponent(query)}`
                });

                const result = await response.json();
                $('#searchLoading').removeClass('active');

                if (result.success && result.songs) {
                    displaySearchResults(result.songs);
                } else {
                    showToast(result.message || 'Search failed', 'error');
                }
            } catch (error) {
                $('#searchLoading').removeClass('active');
                showToast('Search failed. Please try again.', 'error');
                console.error('Search error:', error);
            }
        }

        function displaySearchResults(songs) {
            const resultsContainer = $('#searchResults');

            if (songs.length === 0) {
                resultsContainer.html('<p class="text-muted">No songs found.</p>');
                return;
            }

            let html = '';
            songs.forEach(song => {
                html += `
                    <div class="search-item" onclick="addToQueue('${song.videoId}', '${escapeHtml(song.title)}', '${escapeHtml(song.channelTitle)}', '${song.thumbnailUrl}')">
                        <img src="${song.thumbnailUrl}" alt="${escapeHtml(song.title)}" />
                        <div class="search-item-info">
                            <div class="search-item-title">${escapeHtml(song.title)}</div>
                            <div class="search-item-meta">
                                ${escapeHtml(song.channelTitle)} ‚Ä¢ ${song.duration}
                            </div>
                        </div>
                        <button class="add-btn">
                            <i class="fas fa-plus"></i> Add
                        </button>
                    </div>
                `;
            });

            resultsContainer.html(html);
        }

        async function addToQueue(videoId, title, artist, thumbnail) {
            try {
                const requesterName = prompt('Enter your name (optional):') || 'Anonymous';
                const note = prompt('Add a note (optional):') || '';

                const response = await fetch('/Song/RequestSong', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `videoId=${encodeURIComponent(videoId)}&title=${encodeURIComponent(title)}&artist=${encodeURIComponent(artist)}&requesterName=${encodeURIComponent(requesterName)}&note=${encodeURIComponent(note)}`
                });

                const result = await response.json();

                if (result.success) {
                    showToast(result.message, 'success');
                    // Reload complete station status to update all displays
                    setTimeout(loadRadioStationStatus, 500);
                } else {
                    showToast(result.message || 'Failed to add song', 'error');
                }
            } catch (error) {
                showToast('Failed to add song. Please try again.', 'error');
                console.error('Add to queue error:', error);
            }
        }

        async function loadRadioStationStatus() {
            try {
                // Load all radio station data in parallel
                const [statusResponse, defaultResponse, userResponse, queueResponse] = await Promise.all([
                    fetch('/Song/GetRadioStationStatus'),
                    fetch('/Song/GetDefaultPlaylist'),
                    fetch('/Song/GetUserRequests'),
                    fetch('/Song/GetQueueStatus')
                ]);

                const statusData = await statusResponse.json();
                const defaultData = await defaultResponse.json();
                const userData = await userResponse.json();
                const queueData = await queueResponse.json();

                // Update status cards
                if (statusData.success) {
                    updateStatusCards(statusData.status);
                }

                // Update default playlist
                if (defaultData.success) {
                    updateDefaultPlaylistDisplay(defaultData.songs);
                }

                // Update user requests
                if (userData.success) {
                    updateUserRequestDisplay(userData.requests);
                }

                // Update current playing song and queue
                queue = queueData.queue || [];
                currentlyPlaying = queueData.currentlyPlaying;

                updateQueueDisplay();
                updateNowPlaying(currentlyPlaying);

            } catch (error) {
                console.error('Failed to load radio station status:', error);
                // Fallback to basic queue loading
                loadQueueStatus();
            }
        }

        function updateStatusCards(status) {
            // Update status cards
            $('#nowPlayingCount').text(currentlyPlaying ? 1 : 0);
            $('#userRequestCount').text(status.UserRequestsCount || 0);
            $('#defaultPlaylistCount').text(status.DefaultPlaylistCount || 0);

            // Update status indicator text
            const statusText = document.getElementById('statusText');
            if (status.HasUserRequests) {
                statusText.textContent = 'Playing User Requests';
            } else if (status.IsPlayingDefaultPlaylist) {
                statusText.textContent = 'Playing Default Playlist';
            } else if (status.IsStreaming) {
                statusText.textContent = 'Live Streaming';
            } else {
                statusText.textContent = 'Preparing...';
            }
        }

        function updateDefaultPlaylistDisplay(songs) {
            const defaultList = $('#defaultPlaylistList');

            if (songs.length === 0) {
                defaultList.html('<p class="text-muted text-center">No default songs configured.</p>');
                return;
            }

            let html = '<div class="alert alert-info"><i class="fas fa-info-circle"></i> <strong>Default Playlist</strong>: These songs play when no user requests are queued.</div>';
            songs.forEach((song, index) => {
                html += `
                    <div class="queue-item">
                        <div>
                            <span class="status-indicator" style="background: #17a2b8;"></span>
                            <i class="fas fa-music text-info me-2"></i>
                            <strong>${escapeHtml(song.title)}</strong>
                        </div>
                        <small class="text-muted">Default ‚Ä¢ ${escapeHtml(song.duration || 'Unknown')}</small>
                    </div>
                `;
            });

            defaultList.html(html);
        }

        function updateUserRequestDisplay(requests) {
            const userRequestList = $('#userRequestList');

            if (requests.length === 0) {
                userRequestList.html('<p class="text-muted text-center">No user requests. Songs will play from default playlist.</p>');
                return;
            }

            let html = '<div class="alert alert-warning"><i class="fas fa-star"></i> <strong>User Requests</strong>: These songs have priority and will play next!</div>';
            requests.forEach((request, index) => {
                html += `
                    <div class="queue-item playing">
                        <div>
                            <span class="status-indicator" style="background: #ffc107; animation: pulse 1s infinite;"></span>
                            <i class="fas fa-star text-warning me-2"></i>
                            <strong>${escapeHtml(request.title)}</strong>
                            ${request.requesterName ? `<br><small>Requested by: ${escapeHtml(request.requesterName)}</small>` : ''}
                        </div>
                        <div>
                            <small class="text-white">Position ${index + 1}</small>
                            <br><small class="text-white opacity-75">${escapeHtml(request.duration || 'Unknown')}</small>
                        </div>
                    </div>
                `;
            });

            userRequestList.html(html);
        }

        async function loadQueueStatus() {
            try {
                const response = await fetch('/Song/GetQueueStatus');
                const data = await response.json();

                queue = data.queue || [];
                currentlyPlaying = data.currentlyPlaying;

                updateQueueDisplay();
                updateNowPlaying(currentlyPlaying);
            } catch (error) {
                console.error('Failed to load queue status:', error);
            }
        }

        function updateQueueDisplay() {
            const queueList = $('#queueList');

            if (queue.length === 0) {
                queueList.html('<p class="text-muted text-center">No songs in queue. Search and add songs to start streaming!</p>');
                return;
            }

            let html = '';
            queue.forEach((song, index) => {
                html += `
                    <div class="queue-item">
                        <div>
                            <span class="status-indicator queued"></span>
                            <strong>${escapeHtml(song.title)}</strong>
                        </div>
                        <small class="text-muted">${index + 1} in queue</small>
                    </div>
                `;
            });

            queueList.html(html);
        }

        function updateNowPlaying(song) {
            if (!song || !song.title) {
                $('#songTitle').text('Welcome to RadioHub');
                $('#songArtist').text('Add songs to start streaming');
                $('#albumIcon').className = 'fas fa-music';
                updateStreamStatus('offline');
                return;
            }

            $('#songTitle').text(song.title);
            $('#songArtist').text('No artist info available');
            $('#albumIcon').className = 'fas fa-compact-disc';
            updateStreamStatus('playing');
        }

        function updateStreamStatus(status) {
            const indicator = document.getElementById('statusIndicator');
            const statusText = document.getElementById('statusText');

            switch(status) {
                case 'playing':
                    indicator.style.background = '#28a745';
                    statusText.textContent = 'Live Streaming';
                    break;
                case 'paused':
                    indicator.style.background = '#ffc107';
                    statusText.textContent = 'Paused';
                    break;
                case 'offline':
                    indicator.style.background = '#dc3545';
                    statusText.textContent = 'Offline';
                    break;
                default:
                    indicator.style.background = '#6c757d';
                    statusText.textContent = 'Connecting...';
            }
        }

        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            const toastId = 'toast-' + Date.now();

            const bgClass = type === 'success' ? 'bg-success' :
                           type === 'error' ? 'bg-danger' :
                           type === 'warning' ? 'bg-warning' : 'bg-info';

            const toastHtml = `
                <div id="${toastId}" class="toast ${bgClass} text-white" role="alert">
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;

            toastContainer.insertAdjacentHTML('beforeend', toastHtml);

            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement);
            toast.show();

            setTimeout(() => {
                toastElement.remove();
            }, 5000);
        }

        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }

        // Manual reconnect function
        async function manualReconnect() {
            if (connection && connection.state === signalR.HubConnectionState.Connected) {
                showToast('üîå Already connected', 'info');
                return;
            }

            showToast('üîÑ Attempting to reconnect...', 'info');
            updateConnectionButton();

            try {
                if (connection) {
                    await connection.stop();
                }

                await connection.start();
                isConnected = true;
                updateConnectionButton();
                showToast('üîå Reconnected successfully!', 'success');
                loadQueueStatus();
            } catch (err) {
                console.error('Manual reconnection failed:', err);
                isConnected = false;
                updateConnectionButton();
                showToast('‚ùå Reconnection failed. Please refresh the page.', 'error');
            }
        }

        // Stop audio playback
        function stopAudio() {
            const audioPlayer = document.getElementById('audioPlayer');
            const playIcon = document.getElementById('playIcon');
            const playBtn = document.getElementById('playBtn');

            audioPlayer.pause();
            audioPlayer.currentTime = 0;

            if (isPlaying) {
                playIcon.className = 'fas fa-play';
                playBtn.style.background = 'rgba(255,255,255,0.3)';
                isPlaying = false;
            }
        }

        // Update connection button appearance
        function updateConnectionButton() {
            const reconnectBtn = document.getElementById('reconnectBtn');
            const reconnectIcon = document.getElementById('reconnectIcon');

            if (isConnected) {
                reconnectBtn.style.background = 'rgba(40, 167, 69, 0.3)';
                reconnectIcon.className = 'fas fa-wifi';
                reconnectBtn.title = 'Connected - Click to reconnect';
            } else {
                reconnectBtn.style.background = 'rgba(220, 53, 69, 0.3)';
                reconnectIcon.className = 'fas fa-wifi-slash';
                reconnectBtn.title = 'Disconnected - Click to reconnect';
            }
        }

        // Audio player events
        document.getElementById('audioPlayer').addEventListener('play', () => {
            updateStreamStatus('playing');
        });

        document.getElementById('audioPlayer').addEventListener('pause', () => {
            updateStreamStatus('paused');
        });

        document.getElementById('audioPlayer').addEventListener('error', (e) => {
            console.error('Audio player error:', e);
            updateStreamStatus('offline');
            showToast('‚ùå Could not connect to stream. Icecast server may not be running.', 'error');
        });
    </script>
