@model IEnumerable<RadioStation.Models.SongRequest>

@{ 
    ViewData["Title"] = "Search Results";
}

<div class="text-center">
    <h1 class="display-4">Search Results</h1>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (Model.Any())
        {
            <ul class="list-group">
                @foreach (var song in Model)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@song.Title</span>
                            <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#requestModal-@song.YoutubeVideoId">Request</button>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="requestModal-@song.YoutubeVideoId" tabindex="-1" aria-labelledby="requestModalLabel-@song.YoutubeVideoId" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-action="RequestSong" method="post">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="requestModalLabel-@song.YoutubeVideoId">Request "@song.Title"</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="hidden" name="youtubeVideoId" value="@song.YoutubeVideoId" />
                                            <input type="hidden" name="title" value="@song.Title" />
                                            <div class="mb-3">
                                                <label for="requesterName" class="form-label">Your Name (Optional)</label>
                                                <input type="text" name="requesterName" class="form-control" />
                                            </div>
                                            <div class="mb-3">
                                                <label for="note" class="form-label">Note (Optional)</label>
                                                <textarea name="note" class="form-control" rows="3"></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Submit Request</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No results found.</p>
        }

        <hr />
        <a asp-action="Search" class="btn btn-secondary">Back to Search</a>
    </div>
</div>
