@model List<RadioStation.Models.Radio>;
@{
    ViewData["Title"] = "RadioHub - Listen to Radio Stations Online | Free Internet Radio";
    ViewData["Description"] = "Stream thousands of radio stations worldwide with RadioHub. Listen to music, news, sports, and talk shows online for free. Discover your favorite radio stations today!";
    ViewData["Keywords"] = "online radio, internet radio, radio streaming, live radio, music radio, news radio, sports radio, talk radio, free radio";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
       
    }

    .card-title {
        margin-bottom: 0;
    }
    .card-body {
        flex-grow: 1;
    }

    .audio-player {
        width: 100%;
        max-width: 100%;
        position: absolute; 
        bottom: 10px; 
        left: 0; 
    }
    .favorite-icon {
        float: right;
        cursor: pointer;
        color: #c3c3c3;
        font-size:24px;
        padding-right:10px;
    }

        .favorite-icon:hover {
            color: red;
        }
</style>

<div class="container">

    <div class="row my-4">
        <h2 class="text-primary text-center"> All radio list</h2>
    </div>
<div class="row">
    @if (Model != null && Model.Count > 0)
    {
        @foreach (var radio in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card ">
                    <div class="card-title text-center p-3 fw-bold" style="font-size: 24px;">
                        @radio.RadioName 
                    </div>
                    <div class="float-end">
                        <div class="d-flex justify-content-between align-items">
                            @if (Context.Session.GetInt32("userId") > 1)
                            {
                                <div>
                                    <i class="mx-4 favorite-icon bi bi-heart" data-radio-id="@radio.RadioId"></i>
                                </div>
                            }
                            
                            @if (Context.Session.GetInt32("userId") == 1)
                            {
                                <div class="m-lg-auto">
                                    <a href="@Url.Action("Update", "Home", new { id = radio.RadioId })" class="btn btn-primary btn-sm mx-3">
                                        <i class="bi bi-pencil-square float-end"></i>
                                    </a>

                                    <button class="btn btn-danger btn-sm mx-3 delete-icon" data-radio-id="@radio.RadioId">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            }
                            
                        </div>
                    </div>

                    <img src="/image/Radio.jpg" alt="Radio Image" class="card-img-top">
                    <div class="card-body">
                        <div class="row">
                            <audio class="audio-player" src="@radio.RadioLink" controls></audio>
                        </div>
                        
                    </div>
                </div>
            </div>
        }
    }
</div>
</div>

@section StructuredData {
<script type="application/ld+json">
[
    @if (Model != null && Model.Count > 0)
    {
        foreach (var radio in Model)
        {
            @:@{
                string comma = radio == Model.Last() ? "" : ",";
            }
            <text>
    {
        "@@context": "https://schema.org",
        "@@type": "RadioStation",
        "name": "@radio.RadioName",
        "url": "@radio.RadioLink",
        "description": "Listen to @radio.RadioName radio station online",
        "mainEntityOfPage": {
            "@@type": "WebPage",
            "@@id": "@Context.Request.Scheme://@Context.Request.Host/"
        }
    }@(comma)
            </text>
        }
    }
]
</script>
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var audioPlayers = $(".audio-player"); 
            var currentAudioPlayer = null;

           
            audioPlayers.each(function () {
                this.pause();
            });


            $(".favorite-icon").click(function (e) {
                e.stopPropagation();
                var loveIcon = $(this);

                var radioId = loveIcon.data("radio-id");
                var isFavorite = loveIcon.hasClass("bi-heart");

                $.ajax({
                    url: "@Url.Action("ToggleFavorite", "Home")",
                    method: "POST",
                    data: {
                        radioId: radioId,
                        isFavorite: isFavorite
                    },
                    success: function (response) {
                        if (response.success) {
                            loveIcon.toggleClass("bi-heart bi-heart-fill");
                            loveIcon.toggleClass("text-danger");
                            var radioName = loveIcon.parents(".card").find(".card-title").text().trim();
                            console.log("Radio added/removed from favorites: " + radioName);
                        } else {
                            console.log("Failed to toggle favorite status.");
                        }
                    },
                    error: function () {
                        console.log("An error occurred while toggling favorite status.");
                    }
                });
            });


            
            $("audio").on("play", function () {
                currentAudioPlayer = $(this)[0];
                pauseOtherAudioPlayers(currentAudioPlayer);
            });

            
            function pauseOtherAudioPlayers(audioPlayer) {
                audioPlayers.each(function () {
                    var player = $(this)[0];
                    if (player !== audioPlayer) {
                        player.pause();
                        player.currentTime = 0;
                    }
                });
            }
            $(".delete-icon").click(function () {
                var radioId = $(this).data("radio-id");
                var confirmation = confirm("Are you sure you want to delete this radio?");
                if (confirmation) {
                    
                    window.location.href = "@Url.Action("Delete", "Home")" + "?id=" + radioId;
                }
            });

        });
    </script>
}
