<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "RadioHub - Listen to Your Favorite Radio Stations Online")</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="@@(ViewData["Description"] ?? "Discover and listen to thousands of radio stations from around the world. Stream music, news, sports, and talk shows online with RadioHub - your ultimate radio streaming platform.")" />
    <meta name="keywords" content="@@(ViewData["Keywords"] ?? "radio, streaming, online radio, music, news, sports, talk shows, radio stations, live radio, internet radio")" />
    <meta name="author" content="RadioHub" />
    <meta name="robots" content="@@(ViewData["Robots"] ?? "index, follow")" />

    <!-- Canonical URL -->
    <link rel="canonical" href="@@(Request.Scheme)://@@(Request.Host)@@(Request.Path)" />
    <!-- Font Awesome Free (no account needed) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@@(Request.Scheme)://@@(Request.Host)@@(Request.Path)" />
    <meta property="og:title" content="@@(ViewData["Title"] ?? "RadioHub - Listen to Your Favorite Radio Stations Online")" />
    <meta property="og:description" content="@@(ViewData["Description"] ?? "Discover and listen to thousands of radio stations from around the world. Stream music, news, sports, and talk shows online with RadioHub.")" />
    <meta property="og:image" content="@@(Request.Scheme)://@@(Request.Host)/image/Radio.jpg" />
    <meta property="og:site_name" content="RadioHub" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="@@(Request.Scheme)://@@(Request.Host)@@(Request.Path)" />
    <meta property="twitter:title" content="@@(ViewData["Title"] ?? "RadioHub - Listen to Your Favorite Radio Stations Online")" />
    <meta property="twitter:description" content="@@(ViewData["Description"] ?? "Discover and listen to thousands of radio stations from around the world. Stream music, news, sports, and talk shows online with RadioHub.")" />
    <meta property="twitter:image" content="@@(Request.Scheme)://@@(Request.Host)/image/Radio.jpg" />

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "WebSite",
        "name": "RadioHub",
        "description": "Discover and listen to thousands of radio stations from around the world. Stream music, news, sports, and talk shows online with RadioHub.",
        "url": "@@(Request.Scheme)://@@(Request.Host)",
        "potentialAction": {
            "@@type": "SearchAction",
            "target": "@@(Request.Scheme)://@@(Request.Host)/?search={search_term_string}",
            "query-input": "required name=search_term_string"
        }
    }
    </script>
    @await RenderSectionAsync("StructuredData", required: false)

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RadioStation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RadioStation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <div class="container float-end">
                           
                            @if(Context.Session==null || Context.Session.GetInt32("userId")==null)
                            {
                                <li class="nav-item float-end">
                                <a class="nav-link text-dark"  asp-controller="SignUp" asp-action="Index">Sign Up</a>
                                </li>
                                <li class="nav-item float-end">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Login</a>
                                </li>
                                var res = Context.Session.GetString("userName");
                            }
                            else
                            {
                            <li class="nav-item float-end dropdown">
                                <a class="user-initials btn btn-primary dropdown-toggle" id="userNameDropdown" data-bs-toggle="dropdown" aria-expanded="false">@Context.Session.GetString("userName")</a>
                                <ul class="dropdown-menu" aria-labelledby="userNameDropdown">
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                            @if(Context.Session.GetInt32("userId")==1){
                                <li class="nav-item float-end">
                                     <a class=" btn btn-primary mx-3 " asp-area="" asp-controller="Home" asp-action="Add">Add new radio</a>
                                </li>
                                }
                                else
                                {
                                <li class="nav-item float-end">
                                    <a class=" btn btn-primary mx-3 " asp-area="" asp-controller="Home" asp-action="Favourite" asp-route-id="@Context.Session.GetInt32("userId")">Favourite Radio</a>
                                </li>
                                }
                            } 
                        </div>
                     </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - RadioStation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var userNameDropdown = document.getElementById("userNameDropdown");
            if (userNameDropdown) {
                userNameDropdown.addEventListener("click", function (event) {
                    event.preventDefault();
                    var dropdownMenu = this.nextElementSibling;
                    if (dropdownMenu) {
                        dropdownMenu.classList.toggle("show");
                    }
                });
            }
        });
    </script>
</body>
</html>
